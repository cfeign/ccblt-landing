---
interface Props {
  size?: number;
  class?: string;
}

const { size = 48, class: className = "" } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 48 48"
  width={size}
  height={size}
  class={className}
  fill="none"
>
  <defs>
    <linearGradient id="terminalGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#34d399;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#059669;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Terminal window -->
  <rect
    x="10"
    y="10"
    width="28"
    height="28"
    rx="2"
    fill="url(#terminalGradient)"
    opacity="0.1"
    stroke="url(#terminalGradient)"
    stroke-width="1.5"
  />

  <!-- Title bar -->
  <rect x="10" y="10" width="28" height="5" rx="2" fill="url(#terminalGradient)" opacity="0.3" />

  <!-- Command prompt line 1 -->
  <line x1="13" y1="22" x2="28" y2="22" stroke="url(#terminalGradient)" stroke-width="1.5" />
  <circle cx="12" cy="22" r="1" fill="url(#terminalGradient)" />

  <!-- Command prompt line 2 -->
  <line x1="13" y1="28" x2="24" y2="28" stroke="url(#terminalGradient)" stroke-width="1" opacity="0.6" />
  <circle cx="12" cy="28" r="1" fill="url(#terminalGradient)" opacity="0.6" />

  <!-- Cursor -->
  <rect x="25" y="27" width="1.5" height="3" fill="url(#terminalGradient)" opacity="0.8" />

  <!-- Highlight for 3D -->
  <ellipse cx="15" cy="12" rx="3" ry="1.5" fill="white" opacity="0.2" />
</svg>
