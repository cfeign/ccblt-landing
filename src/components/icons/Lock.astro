---
interface Props {
  size?: number;
  class?: string;
}

const { size = 48, class: className = "" } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 48 48"
  width={size}
  height={size}
  class={className}
  fill="none"
>
  <defs>
    <linearGradient id="lockGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#34d399;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#059669;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Lock body -->
  <rect
    x="16"
    y="22"
    width="16"
    height="18"
    rx="2"
    fill="url(#lockGradient)"
    opacity="0.6"
    stroke="url(#lockGradient)"
    stroke-width="1.5"
  />

  <!-- Lock shackle (top curved part) -->
  <path
    d="M 19 22 Q 19 10 24 10 Q 29 10 29 22"
    stroke="url(#lockGradient)"
    stroke-width="2.5"
    fill="none"
    stroke-linecap="round"
  />

  <!-- Highlight on shackle -->
  <path
    d="M 20 18 Q 20 12 24 12"
    stroke="white"
    stroke-width="1"
    fill="none"
    stroke-linecap="round"
    opacity="0.3"
  />

  <!-- Keyhole -->
  <circle cx="24" cy="28" r="2" fill="url(#lockGradient)" opacity="0.4" />
  <rect
    x="23"
    y="30"
    width="2"
    height="4"
    rx="1"
    fill="url(#lockGradient)"
    opacity="0.3"
  />

  <!-- Security indicator dots -->
  <circle cx="16.5" cy="34" r="1" fill="url(#lockGradient)" opacity="0.5" />
  <circle cx="31.5" cy="34" r="1" fill="url(#lockGradient)" opacity="0.5" />
</svg>
