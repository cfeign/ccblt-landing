---
// Hero section with brutalist neon design
---

<section class="min-h-screen flex items-center justify-center px-4 py-8 bg-brutalist-black">
  <div class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">
    <!-- Left: Text content with brutalist typography -->
    <div class="space-y-6">
      <div class="compact-card">
        <div class="neon-pink text-sm font-bold mb-3 glitch-text" data-text="MODERN DEBUGGING">
          MODERN DEBUGGING
        </div>
        
        <h1 class="text-6xl lg:text-8xl font-bold leading-tight mb-4">
          <div class="text-white glitch-text" data-text="EFFICIENT DEVTOOL DEBUGGING">EFFICIENT DEVTOOL DEBUGGING</div>
        </h1>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4">
        <a href="https://github.com/cfeign/browser-logger" target="_blank" rel="noopener noreferrer" class="brutalist-neon px-6 py-3 text-center font-bold text-black hover:bg-brutalist-black transition-all duration-100">
          <span class="neon-pink">GET</span> <span class="neon-cyan">STARTED</span>
        </a>
        <a href="https://coryfeign.com" target="_blank" rel="noopener noreferrer" class="brutalist px-6 py-3 text-center font-bold text-white hover:bg-brutalist-black transition-all duration-100">
          <span class="neon-green">MADE</span> <span class="neon-yellow">BY</span> <span class="neon-purple">CORY</span> <span class="neon-blue">FEIGN</span>
        </a>
      </div>

      <!-- Feature badges -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
        <div class="brutalist-neon p-3 text-center">
          <div class="neon-pink font-bold text-sm">LIGHTNING</div>
          <div class="neon-cyan text-xs">100X FASTER</div>
        </div>

        <div class="brutalist-neon p-3 text-center">
          <div class="neon-pink font-bold text-sm">CLAUDE</div>
          <div class="neon-cyan text-xs">INTEGRATION</div>
        </div>

        <div class="brutalist-neon p-3 text-center">
          <div class="neon-pink font-bold text-sm">MINIMAL</div>
          <div class="neon-cyan text-xs">CONTEXT</div>
        </div>
      </div>
    </div>

    <!-- Right: Brutalist terminal -->
    <div class="compact-card">
      <div class="terminal-header px-4 py-2 font-bold text-neon-cyan border-b-2 border-brutalist-gray">
        <div class="flex justify-between items-center">
          <div class="flex gap-2">
            <div class="w-3 h-3 bg-red-500 rounded-full"></div>
            <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
            <div class="w-3 h-3 bg-green-500 rounded-full"></div>
          </div>
          <span>~/browser-logger</span>
          <div class="flex gap-1">
            <div class="w-1 h-1 bg-neon-pink rounded-full animate-pulse"></div>
            <div class="w-1 h-1 bg-neon-cyan rounded-full animate-pulse" style="animation-delay: 0.2s"></div>
            <div class="w-1 h-1 bg-neon-green rounded-full animate-pulse" style="animation-delay: 0.4s"></div>
          </div>
        </div>
      </div>

      <div class="terminal p-4 font-mono text-sm space-y-2 h-64 overflow-hidden">
        <div class="text-neon-cyan flex gap-2">
          <span>$</span>
          <span>bun run check errors</span>
        </div>
        
        <div class="brutalist-neon p-3 border-2 border-neon-pink mb-3">
          <div class="neon-pink font-bold mb-2">✓ RECENT ERRORS (LAST 5 MINUTES)</div>
          <div class="text-red-400 text-sm mb-1">❌ [error] Failed to fetch user data</div>
          <div class="text-gray-500 text-xs mb-2">  at /dashboard.js:45 • 2024-10-27T07:30:15.234Z</div>
          <div class="text-yellow-400 text-sm mb-1">⚠️ [warn] Slow network request</div>
          <div class="text-gray-500 text-xs">  GET /api/data → 2340ms • 2024-10-27T07:30:12.120Z</div>
        </div>
        
        <div class="text-neon-cyan flex gap-2">
          <span>$</span>
          <span>bun run query --</span>
          <span class="neon-green">"SELECT * FROM network_logs WHERE total_time > 1000"</span>
        </div>
        
        <div class="text-neon-cyan flex gap-2">
          <span>▌</span>
          <span class="text-gray-500 text-sm">PROCESSING QUERY...</span>
        </div>
      </div>
    </div>
  </div>
</section>
